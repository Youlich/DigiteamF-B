<head>
    <meta charset="utf-8">
    <title>DigiTeam - agence digitale sport</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="{{ asset('/images/favicon.ico') }}" />

    <title>{% block title %}Article blog DigiTeam{% endblock %}</title>

    {% include 'layout/stylesheets.html.twig' %}

</head>

{% include 'layout/navbar.html.twig' %}
<body>
<div class="titlepage" style="padding-top: 4%">
        <div class="container">
            <div >
                <img style="max-width: 350px;max-height: 500px;" src="{{ asset('uploads/images/') }}{{ article.image }}" alt="{{ article.altImage }}" class="img-fluid imageblog">
                <br/><br/>
            </div>
            <div class="main_home text-center">
                <div class="col-md-12">
                    <div class="">
                        <div class="">
                            <div class="home_text ">
                                <h2 class="text-orange">{{ article.titre }}</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<br/><br/>
<div class="container">
<div class="row" style="border: 2px dashed #f9af32;padding-top: 2%;">
    <div class="col-md-4">

        {% if article.auteur == 'Maxime CONSTANTIN' %}
            <img src="{{ asset('/images/Maxime.jpg') }}" alt="Photo Maxime" class="img-circle" />
        {% endif %}

        {% if article.auteur == 'Elodie ROUEL'%}
            <img src="{{ asset('/images/Elodie.jpg') }}" alt="Photo Elodie" class="img-circle" />
        {% endif %}

        {% if article.auteur == 'Julie TATIBOUET'%}
            <img src="{{ asset('/images/julie.jpg') }}" alt="Photo Julie" class="img-circle" />
        {% endif %}

        {% if article.auteur == 'Florian BRETON'%}
            <img src="{{ asset('/images/Florian.jpg') }}" alt="Photo Florian" class="img-circle" />
        {% endif %}
        
        
    </div>
    <div class="col-md-6"><h5>{{ article.resume }}</h5></div>
</div>
    <br/><br/>
    <div class="container" style="color:black;">
        
        <div class="article-contenu" >
            {{ article.contenu | raw }}
        </div>

        <div class="article-infos pull-right">
            <p>Auteur : {{ article.auteur }}</p>
            <p>Publie le : {{ article.dateAjout | date('d/m/y') }}</p>
        </div>

        <br/><br/><br/><br/>
        <div class="row" style="text-align: right">
            <div class="attr-nav">
                <ul class="list-inline m-top-20">
                    <li><iframe src="http://www.facebook.com/plugins/like.php?href=http://digiteamp5.com/article/{slug}&layout=box_count&show_faces=true&width=65&action=like&font=arial&colorscheme=light&height=65"
                                    scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:65px; height:65px; margin-top:3px;" allowTransparency="true"></iframe></li>
                    <li><div class="fb-share-button" data-href="http://digiteamp5.com/article/{slug}" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Partager</a></div></li>
                    <li><a href="http://twitter.com/share" class="social-icon twitter-share-button" data-count="vertical" data-via="digiteam2">Tweet</a></li>
                </ul>
            </div>
        </div>

        <div style="margin-top:30px;">
            {% include 'form/commentaire.html.twig' %}
        </div>

        

    </div>

    <div style="margin-top:40px;">
        <h3 style="margin-bottom:30px;">Vos commentaires</h3>

        {% for commentaire in article.commentaires %}
            <div class="commentaires" style="border-bottom:1px solid grey;">
                <div class="commentaire-header" style="font-size: 1.3rem;font-weight: 400;">
                    <p style="color:#271111;" >{{ commentaire.nom }} {{ commentaire.prenom }}</p>
                </div>
                <div class="commentaire-body" style="font-size: 1.2rem;padding-top:5px;padding-bottom:5px;">
                    <p style="color:#111111;" >{{ commentaire.contenu }}</p>
                </div>

                <div class="commentaire-footer" style="font-size: 0.9rem;font-weight:normal;margin-bottom:20px;">
                    <p style="color:#888888;">Publi√© le : {{ commentaire.dateAjout | date('d/m/y') }}</p>
                </div>
                
            </div>
            </br>
        {% endfor %}
    </div>

</div>

{% include 'layout/footer.html.twig' %}
<div id="fb-root"></div>
<script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = 'https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.2';
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
<script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>

{% include 'layout/javascripts.html.twig' %}
</body>
