        <div class="col-md-4 box1">
            <br/>
            <a href="tel:+123456789" style="color: #000;"><i class="fa fa-phone fa-3x"></i>
                <h3 class="d-none d-lg-block d-xl-block">Téléphone</h3>
                <p class="d-none d-lg-block d-xl-block">04-67-00-00-12</p></a>
        </div>
        <div class="col-md-4 box2">
            <br/>
            <a href="" style="color: #000;"><i class="fa fa-home fa-3x"></i>
                <h3 class="d-none d-lg-block d-xl-block">Adresse</h3>
                <p class="d-none d-lg-block d-xl-block">3, Place de la Comédie</p>
                <p class="d-none d-lg-block d-xl-block">34000 Montpellier</p></a>
        </div>
        <div class="col-md-4 box3">
            <br/>
            <a href="mailto:test@test.com" style="color: #000;"><i class="fa fa-envelope fa-3x"></i>
                <h3 class="d-none d-lg-block d-xl-block">E-mail</h3>
                <p class="d-none d-lg-block d-xl-block">contact@digiteamp5.com</p></a>
        </div>
    </div>
</div>

