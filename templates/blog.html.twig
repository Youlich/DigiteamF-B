<head>
    <meta charset="utf-8">
    <title>DigiTeam - agence digitale sport - Notre blog</title>
    <meta name="description" content="L'agence Digiteam Sport vous accompagne de la conception jusqu'à la mise en place de votre stratégie digitale. Notre blog">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="{{ asset('/images/favicon.ico') }}" />

    <title>{% block title %}DigiTeam{% endblock %}</title>

    {% include 'layout/stylesheets.html.twig' %}

</head>


{% include 'layout/navbar.html.twig' %}
<body>
<div class="titlepage">

    <div class="container">
        <div class="">
            <div class="main_home text-center">
                <div class="col-md-12">
                    <div class="">
                        <div class="">
                            <div class="home_text ">
                                <h1 class="text-orange">Notre blog</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
        </div>
    </div>
<br/><br/><br/><br/>



<div class="container">
<div class="">
    <div class="filters-button-group text-right sm-text-center">
        <button class="btn filter-button" data-filter="tout">Tout</button>
        <button class="btn filter-button" data-filter="Web">Web</button>
        <button class="btn filter-button" data-filter="Conseil">Conseil</button>
        <button class="btn filter-button" data-filter="InboundMarketing">Inbound Marketing</button>
        <button class="btn filter-button" data-filter="Design">Design</button>
    </div>
</div>
    <br/><br/><br/><br/>

<div class="row">
    {% for article in articles %}

        {% if article.category == 'Web' %}
        <div id="Web" class="col-md-4 filter ({{ article.category }} == Web) ">

            <div class="card-content">
                <div class="card-img">
                    <img src="{{ asset('uploads/images/') }}{{ article.image }}" alt="{{ article.altImage }}">
                    <span><h4>{{ article.titre }}</h4></span>
                </div>
                <div class="card-desc">

                    <p>{{ article.resume }}</p>

                    <a href="{{ path('article', { 'slug': article.slug }) }}" class="btn-card">En savoir plus</a>
                </div>
            </div>
        </div>
        {% elseif article.category == 'Conseil' %}
            <div id="Conseil"  class="col-md-4 filter ({{ article.category }} == Conseil) ">

                <div class="card-content">
                    <div class="card-img">
                        <img src="{{ asset('uploads/images/') }}{{ article.image }}" alt="{{ article.altImage }}">
                        <span><h4>{{ article.titre }}</h4></span>
                    </div>
                    <div class="card-desc">

                        <p>{{ article.resume }}</p>

                        <a href="{{ path('article', { 'slug': article.slug }) }}" class="btn-card">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% elseif article.category == 'InboundMarketing' %}
            <div id="InboundMarketing" class="col-md-4 filter ({{ article.category }} == InboundMarketing) ">

                <div class="card-content">
                    <div class="card-img">
                        <img src="{{ asset('uploads/images/') }}{{ article.image }}" alt="{{ article.altImage }}">
                        <span><h4>{{ article.titre }}</h4></span>
                    </div>
                    <div class="card-desc">

                        <p>{{ article.resume }}</p>

                        <a href="{{ path('article', { 'slug': article.slug }) }}" class="btn-card">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% elseif article.category == 'Design' %}
            <div id="Design" class="col-md-4 filter ({{ article.category }} == Design) ">

                <div class="card-content">
                    <div class="card-img">
                        <img src="{{ asset('uploads/images/') }}{{ article.image }}" alt="{{ article.altImage }}">
                        <span><h4>{{ article.titre }}</h4></span>
                    </div>
                    <div class="card-desc">

                        <p>{{ article.resume }}</p>

                        <a href="{{ path('article', { 'slug': article.slug }) }}" class="btn-card">En savoir plus</a>
                    </div>
                </div>
            </div>

        {% endif %}
        {% else %}
                <div id="tout">
                </div>



{% endfor %}




</div> <br/><br/><br/>
</div>

{% include 'layout/footer.html.twig' %}
</body>
{% include 'layout/javascripts.html.twig' %}

